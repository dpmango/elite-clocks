mixin productCard(card)
  // productCard
  a(href="#").productCard
    .productCard__title= card.title
    .productCard__gallery.swiper-container.js-swiper-product
      .swiper-wrapper
        each img in card.gallery
          .swiper-slide
            .productCard__image
              img(src='img/products/'+img+'.png' srcset='img/products/'+img+'@2x.png 2x')

      .productCard__gallery-prev.swiper-product-prev
        +svgMono('arrow-left')
      .productCard__gallery-next.swiper-product-next
          +svgMono('arrow-right')

    .productCard__brand= card.brand

    .productCard__price
      span= card.price
