            +productFull({title: 'NL125', gallery: ['product_5', 'product_6'], brand: 'Matthias Naeschke', price: '15 140€' })
            +productFull({title: 'NT 10', gallery: ['product_6', 'product_4'], brand: 'Erwin Sattler', price: '10 200€' })
            +productFull({title: 'Opus Sonata', gallery: ['product_7', 'product_1'], brand: 'Erwin Sattler', price: '12 140€' })
